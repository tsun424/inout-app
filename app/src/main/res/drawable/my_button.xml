<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3eadeb" />
            <gradient android:angle="-90" android:startColor="#3eadeb" android:endColor="#3eadeb"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3eadeb" />
            <solid android:color="#3eadeb"/>
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#B9B9B9" />
            <gradient android:angle="-90" android:startColor="#B9B9B9" android:endColor="#B9B9B9"  />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3eadeb" />
            <gradient android:angle="-90" android:startColor="#3eadeb" android:endColor="#3eadeb" />
        </shape>
    </item>
</selector>