<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingStart="10dp">

    <LinearLayout
        android:id="@+id/linear_list_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/act_start_time"
            android:textStyle="bold"
            android:textSize="@dimen/list_large_text_size"
            android:minHeight="@dimen/min_list_item_height"
            android:layout_weight="4"/>
        <ImageView
            android:id="@+id/iv_status"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:contentDescription="@string/status"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_list_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/act_end_time"
            android:textStyle="bold"
            android:textSize="@dimen/list_large_text_size"
            android:minHeight="@dimen/min_list_item_height"
            android:layout_weight="4"/>
        <ImageView
            android:id="@+id/iv_is_repeat"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:contentDescription="@string/is_repeat"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/act_type"
        android:layout_marginTop="@dimen/normal_margin"
        android:textSize="@dimen/list_text_size"
        android:minHeight="@dimen/min_list_item_height"/>

</LinearLayout>