<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@style/AppTheme"
    tools:context=".ui.ActivityDetailFragment"
    android:background="@android:color/white">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/act_details_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/act_details_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:id="@+id/act_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"

        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:text="@string/time_out"
            android:background="@color/color_light_grey"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/heading_left_padding"
            android:paddingStart="@dimen/heading_left_padding"
            android:paddingRight="@dimen/heading_right_padding"
            android:paddingEnd="@dimen/heading_right_padding"
            android:layout_height="@dimen/heading_height"
            android:textSize="@dimen/normal_heading_size"/>
        <TextView
            android:id="@+id/tv_time_out"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/content_left_padding"
            android:paddingStart="@dimen/content_left_padding"
            android:paddingRight="@dimen/content_right_padding"
            android:paddingEnd="@dimen/content_right_padding"
            android:minHeight="@dimen/min_content_height" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:text="@string/time_in"
            android:background="@color/color_light_grey"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/heading_left_padding"
            android:paddingStart="@dimen/heading_left_padding"
            android:paddingRight="@dimen/heading_right_padding"
            android:paddingEnd="@dimen/heading_right_padding"
            android:layout_height="@dimen/heading_height" />
        <TextView
            android:id="@+id/tv_time_in"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/content_left_padding"
            android:paddingStart="@dimen/content_left_padding"
            android:paddingRight="@dimen/content_right_padding"
            android:paddingEnd="@dimen/content_right_padding"
            android:minHeight="@dimen/min_content_height"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:text="@string/type"
            android:background="@color/color_light_grey"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/heading_left_padding"
            android:paddingStart="@dimen/heading_left_padding"
            android:paddingRight="@dimen/heading_right_padding"
            android:paddingEnd="@dimen/heading_right_padding"
            android:layout_height="@dimen/heading_height" />
        <TextView
            android:id="@+id/tv_activity_type"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/content_left_padding"
            android:paddingStart="@dimen/content_left_padding"
            android:paddingRight="@dimen/content_right_padding"
            android:paddingEnd="@dimen/content_right_padding"
            android:minHeight="@dimen/min_content_height"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:text="@string/is_working_alone"
            android:background="@color/color_light_grey"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/heading_left_padding"
            android:paddingStart="@dimen/heading_left_padding"
            android:paddingRight="@dimen/heading_right_padding"
            android:paddingEnd="@dimen/heading_right_padding"
            android:layout_height="@dimen/heading_height" />
        <TextView
            android:id="@+id/tv_working_alone"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/content_left_padding"
            android:paddingStart="@dimen/content_left_padding"
            android:paddingRight="@dimen/content_right_padding"
            android:paddingEnd="@dimen/content_right_padding"
            android:minHeight="@dimen/min_content_height"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:text="@string/status"
            android:background="@color/color_light_grey"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/heading_left_padding"
            android:paddingStart="@dimen/heading_left_padding"
            android:paddingRight="@dimen/heading_right_padding"
            android:paddingEnd="@dimen/heading_right_padding"
            android:layout_height="@dimen/heading_height" />
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/content_left_padding"
            android:paddingStart="@dimen/content_left_padding"
            android:paddingRight="@dimen/content_right_padding"
            android:paddingEnd="@dimen/content_right_padding"
            android:minHeight="@dimen/min_content_height"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:text="@string/contact"
            android:background="@color/color_light_grey"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/heading_left_padding"
            android:paddingStart="@dimen/heading_left_padding"
            android:paddingRight="@dimen/heading_right_padding"
            android:paddingEnd="@dimen/heading_right_padding"
            android:layout_height="@dimen/heading_height" />
        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/content_left_padding"
            android:paddingStart="@dimen/content_left_padding"
            android:paddingRight="@dimen/content_right_padding"
            android:paddingEnd="@dimen/content_right_padding"
            android:minHeight="@dimen/min_content_height"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:text="@string/groups"
            android:background="@color/color_light_grey"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/heading_left_padding"
            android:paddingStart="@dimen/heading_left_padding"
            android:paddingRight="@dimen/heading_right_padding"
            android:paddingEnd="@dimen/heading_right_padding"
            android:layout_height="@dimen/heading_height" />
        <TextView
            android:id="@+id/tv_groups"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/content_left_padding"
            android:paddingStart="@dimen/content_left_padding"
            android:paddingRight="@dimen/content_right_padding"
            android:paddingEnd="@dimen/content_right_padding"
            android:minHeight="@dimen/min_content_height"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:text="@string/is_repeat"
            android:background="@color/color_light_grey"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/heading_left_padding"
            android:paddingStart="@dimen/heading_left_padding"
            android:paddingRight="@dimen/heading_right_padding"
            android:paddingEnd="@dimen/heading_right_padding"
            android:layout_height="@dimen/heading_height" />
        <TextView
            android:id="@+id/tv_is_repeat"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/content_left_padding"
            android:paddingStart="@dimen/content_left_padding"
            android:paddingRight="@dimen/content_right_padding"
            android:paddingEnd="@dimen/content_right_padding"
            android:minHeight="@dimen/min_content_height"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:text="@string/label_comments"
            android:background="@color/color_light_grey"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/heading_left_padding"
            android:paddingStart="@dimen/heading_left_padding"
            android:paddingRight="@dimen/heading_right_padding"
            android:paddingEnd="@dimen/heading_right_padding"
            android:layout_height="@dimen/heading_height" />
        <TextView
            android:id="@+id/tv_comments"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/content_left_padding"
            android:paddingStart="@dimen/content_left_padding"
            android:paddingRight="@dimen/content_right_padding"
            android:paddingEnd="@dimen/content_right_padding"
            android:minHeight="@dimen/min_content_height"/>

    </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>